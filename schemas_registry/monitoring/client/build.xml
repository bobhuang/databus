<project name="compile-client-monitoring-events" default="build">
	
  <!-- Import Product Properties -->
  <property name="artifact.version.avro" value="1.4.0" />
  <property name="artifact.version.jackson" value="1.8.5" />
  <property name="gradle.cache.dir" value="${user.home}/.gradle/caches/artifacts-13/filestore" />
  <property name="jackson.cache.dir" value="${gradle.cache.dir}/org.codehaus.jackson" />
  <property name="jackson-core-asl.jar" value="${jackson.cache.dir}/jackson-core-asl/${artifact.version.jackson}/jar/713a5564acb9a5467521bbb53221ab8e1fe65039/jackson-core-asl-${artifact.version.jackson}.jar" />  
  <property name="jackson-mapper-asl.jar" value="${jackson.cache.dir}/jackson-mapper-asl/${artifact.version.jackson}/jar/56439095aa051521c5abb330235820c66886b5e5/jackson-mapper-asl-${artifact.version.jackson}.jar" />
  <property name="avro.cache.dir" value="${gradle.cache.dir}/org.apache.avro/avro" />
  <property name="avro.jar" value="${avro.cache.dir}/${artifact.version.avro}/jar/eb45afcd34f5d3737320afa1a02a4fd0b52642be/avro-${artifact.version.avro}.jar" />
  <property name="java.src.dir" value="${basedir}/../../../databus-client/databus-client-api/src/main/java" />

  <taskdef name="avro-schema-compile" classname="org.apache.avro.specific.SchemaTask" 
        classpath="${avro.jar}:${jackson-core-asl.jar}:${jackson-mapper-asl.jar}" />
	

  <target name="build-ConsumerCallbackStats">
  	<avro-schema-compile file="${basedir}/ConsumerCallbackStatsEvent.1.avsc" 
  		                 destdir="${java.src.dir}" />
  </target>
	
  <target name="build" 
  	      depends="build-ConsumerCallbackStats">
  </target>
	
</project>