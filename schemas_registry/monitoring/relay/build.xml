<project name="compile-relay-monitoring-events" >
	
  <!-- Import Product Properties -->
  <import file="${basedir}/../../../product/product-properties.xml"/>
	
  <property name="ivy.cache.dir" value="${user.home}/.ivy2/lin-cache/ivy-cache" />
  <property name="sandbox-repo.dir" value="${basedir}/../../../sandbox-repo" />
  <property name="java.src.dir" value="${basedir}/../../../databus2-relay/impl/java" />

  <taskdef name="avro-schema-compile" classname="org.apache.avro.specific.SchemaTask" 
  		classpath="${ivy.cache.dir}/org.apache.avro/avro/${artifact.version.avro}/avro-${artifact.version.avro}.jar:${ivy.cache.dir}/org.codehaus.jackson-core-asl/jackson-core-asl/${artifact.version.jackson-core-asl}/jackson-core-asl-${artifact.version.jackson-core-asl}.jar:${ivy.cache.dir}/org.codehaus.jackson-mapper-asl/jackson-mapper-asl/${artifact.version.jackson-mapper-asl}/jackson-mapper-asl-${artifact.version.jackson-mapper-asl}.jar" />
  <!-- taskdef name="avro-schema-compile" classname="org.apache.avro.specific.SchemaTask" 
	   		 classpath="${sandbox-repo.dir}/org/apache/avro/avro/${artifact.version.avro}/avro-${artifact.version.avro}.jar:${ivy.cache.dir}/org.codehaus.jackson-core-asl/jackson-core-asl/${artifact.version.jackson-core-asl}/jackson-core-asl-${artifact.version.jackson-core-asl}.jar:${ivy.cache.dir}/org.codehaus.jackson-mapper-asl/jackson-mapper-asl/${artifact.version.jackson-mapper-asl}/jackson-mapper-asl-${artifact.version.jackson-mapper-asl}.jar" / -->
	

  <target name="build-DbusHttpTotalStats">
  	<avro-schema-compile file="${basedir}/DbusHttpTotalStatsEvent.1.avsc" 
  		                 destdir="${java.src.dir}" />
  </target>
	
  <target name="build-DbusDbSourceConnectionStatsEvent">
  	<avro-schema-compile file="${basedir}/DbusDbSourceConnectionStatsEvent.1.avsc" 
  		                 destdir="${java.src.dir}" />
  </target>
	
  <target name="build" 
  	      depends="build-DbusHttpTotalStats,build-DbusDbSourceConnectionStatsEvent">
  </target>
	
</project>
