#!/bin/bash
# test a relay can run with a large mmapped buffer.
#  -. start member2relay with a property file config/relay-config-large-mmapped-1.properties
#  -. gen event, monitoring the buffer stats, freespace etc
#  start client before the gen_event

# start the relay on port 8080
source setup_env.inc
$SCRIPT_DIR/dbus2_driver.py -c profile_relay -o start -p $CONFIG_DIR/relay-config-large-mmapped-1.properties

# start the consumer
#consumer_1_log=${WORK_DIR_FROM_ROOT}/profile_consumer_1.events
#$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o start --dump_file=${consumer_1_log}
$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o start

# generate events
$SCRIPT_DIR/dbus2_gen_event.py -s 2 -e 2000 -t 300000

#echo == Event generation started. Please check $WORK_DIR/profile_relay_event_trace and ${consumer_1_log}
# wait for 310 secs before check relay and max wait for consumer to catch up is 3600
$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o wait_event --sleep_before_wait=310 --timeout=3600
 
# look at the log
echo ==GREP ERROR
RelayLogFile=`ls -1tr $LOG_DIR/profile_relay_start* | ${TAIL_PATH} -n 1`
ConsumerLogFile=`ls -1tr $LOG_DIR/profile_consumer_start* | ${TAIL_PATH} -n 1`
grep ERROR $RelayLogFile

# stop
$SCRIPT_DIR/dbus2_driver.py -c profile_relay -o stop
$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o stop

#compare result
echo ==Compare JSON
stat_txt="Test $0"
$SCRIPT_DIR/producer_consumer_diff.sh $RelayLogFile $ConsumerLogFile
#$SCRIPT_DIR/dbus2_json_compare.py -s $WORK_DIR/profile_relay_event_trace ${consumer_1_log}
source report_pass_fail.inc

exit $all_stat
