#!/bin/bash
# test a relay can run with a small buffer.
#  -. start member2relay with a property file config/relay-config-small-1.properties
#  -. gen event, monitoring the buffer stats, freespace etc
#  start client before the gen_event

# start the relay on port 8080
source setup_env.inc
$SCRIPT_DIR/dbus2_driver.py -c db_relay -o start --cmdline_props=databus.relay.eventBuffer.maxSize=1024000000 --db_config_file=config/sources-bizfollow-beta.json --jvm_direct_memory_size=11g

# start the consumer
consumer_1_log=${WORK_DIR_FROM_ROOT}/bizfollow_consumer_1.events
consumer_1_value_log=${WORK_DIR_FROM_ROOT}/bizfollow_consumer_1.values
$SCRIPT_DIR/dbus2_driver.py -c bizfollow_consumer -o start --dump_file=${consumer_1_log} --value_file=${consumer_1_value_log}

#$SCRIPT_DIR/dbus2_gen_event.py --db_gen -s bizfollow
# pull everything
$SCRIPT_DIR/dbus2_gen_event.py --db_gen -s bizfollow --from_scn=156123456000
#$SCRIPT_DIR/dbus2_gen_event.py --db_gen -s bizfollow --from_scn=156254803000

exit 0
# generate events
#$SCRIPT_DIR/dbus2_gen_event.py -s 2 -e 15000 -t 600
#$SCRIPT_DIR/dbus2_gen_event.py -s 2 -e 15000 -t 1600

#sleep 2, more intelligent wait
$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o wait_event --sleep_before_wait=1

# look at the log
echo ==GREP ERROR
ls -1tr $LOG_DIR/profile_relay_start* | ${TAIL_PATH} -n 1 | xargs grep ERROR

# stop
$SCRIPT_DIR/dbus2_driver.py -c profile_relay -o stop
$SCRIPT_DIR/dbus2_driver.py -c profile_consumer -o stop


#compare result
stat_txt="Test $0"
$SCRIPT_DIR/dbus2_json_compare.py -s $WORK_DIR/profile_relay_event_trace ${consumer_1_log}
source report_pass_fail.inc

exit $all_stat
